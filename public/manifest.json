{
  "manifest_version": 3,
  "name": "QuickScribe Reader Mode",
  "version": "1.0.0",
  "description": "Clean reader mode with AI summarization for any webpage",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://quickscribe-gl7p4e0o8-chandima-karunaratnes-projects.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "QuickScribe Reader Mode",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["readability.js", "content.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
