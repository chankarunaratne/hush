{
  "manifest_version": 3,
  "name": "QuickScribe Reader Mode",
  "version": "1.0.0",
  "description": "Clean reader mode with AI summarization for any webpage",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "QuickScribe Reader Mode",
    "default_icon": {
      "16": "data:image/svg+xml;base64,"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["readability.js", "content.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "data:image/svg+xml;base64,",
    "48": "data:image/svg+xml;base64,",
    "128": "data:image/svg+xml;base64,"
  }
}
