{
  "manifest_version": 3,
  "name": "Hush",
  "version": "1.0.0",
  "description": "A beautiful reader that cleans up any article",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://quickscribe-gl7p4e0o8-chandima-karunaratnes-projects.vercel.app/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*.svg", "assets/*.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Hush",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["purify.min.js", "readability.js", "content.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
